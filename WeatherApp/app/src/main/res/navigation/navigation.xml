<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/titleFragment">

    <fragment
        android:id="@+id/titleFragment"
        android:name="com.example.weatherapp.fragments.TitleFragment"
        android:label="TitleFragment"
        tools:layout="@layout/fragment_title">
        <action
            android:id="@+id/action_titleFragment_to_detailFragment"
            app:destination="@id/detailFragment"/>
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.weatherapp.fragments.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <argument
            android:name="time"
            app:argType="string"/>
        <argument
            android:name="temp"
            app:argType="string"/>
        <argument
            android:name="maxTemp"
            app:argType="string"/>
        <argument
            android:name="minTemp"
            app:argType="string"/>
        <argument
            android:name="condition"
            app:argType="string"/>
        <argument
            android:name="sunrise"
            app:argType="string"/>
        <argument
            android:name="sunset"
            app:argType="string"/>
        <argument
            android:name="cloudCover"
            app:argType="string"/>
        <argument
            android:name="humidity"
            app:argType="string"/>
    </fragment>
</navigation>